[Desktop Entry]
Name=Snippet Pixie
Comment=Your little expandable text snippet helper
Exec=com.github.bytepixie.snippetpixie
Icon=com.github.bytepixie.snippetpixie
Keywords=expand;text;snippet;
Terminal=false
Type=Application
StartupNotify=true
Categories=GTK;Office;TextTools;Utility;
Actions=Start;Stop;

[Desktop Action Start]
Name=Start Snippet Pixie
Exec=com.github.bytepixie.snippetpixie --start

[Desktop Action Stop]
Name=Stop Snippet Pixie
Exec=com.github.bytepixie.snippetpixie --stop
